<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background3"
    tools:context=".About">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:fontFamily="casual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:text="Flower Pots chơi trên một lưới ô vuông 4x4. Người chơi có thể di chuyển các ô vuông bằng cách lướt màn hình theo 1 trong 4 hướng (trái,phải,lên,xuống). Mỗi lượt di chuyển sẽ xuất hiện ngẫu nhiên một chậu đất hoặc chậu đồng trên lưới ô trống. Khi di chuyển hai chậu giống nhau va vào nhau sẽ tạo thành một chậu mới. " />
            <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/gopchau1"
                android:layout_marginBottom="30dp"/>
            <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/gopchau2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:text="Trò chơi kết thúc khi tất cả các ô vuông được lắp đầy và không thể di chuyển được nữa."/>
            <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/gameover"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:text="Sau đây là hình ảnh các chậu theo thứ tự từ thấp đến cao."></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_gravity="center"
                android:layout_height="90dp"
                android:background="@drawable/pot1"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/pot2"/>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/pot3"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/pot4"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/pot5"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/pot6"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
