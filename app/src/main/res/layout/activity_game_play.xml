<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@drawable/ic_background2"
    android:orientation="vertical"
    tools:context=".GamePlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical"
                    android:background="@drawable/ic_goctron"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="Score"
                            android:textColor="#FFF"
                            android:textSize="20sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/myDiem"
                            android:text="0"
                            android:textColor="#FFF"
                            android:textSize="20sp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/ic_goctron"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Best"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#FFF"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/myBestDiem"
                            android:text="0"
                            android:textColor="#FFF"
                            android:textSize="20sp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <Button
                    android:layout_gravity="center"
                    android:textColor="#FFF"
                    android:background="@drawable/ic_goctron3"
                    android:text="Undo"
                    android:id="@+id/btnUnDo"
                    android:layout_width="85dp"
                    android:layout_height="50dp"
                    ></Button>
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:id="@+id/btnMenu"
                    android:textColor="#FFF"
                    android:background="@drawable/ic_goctron3"
                    android:text="Menu"
                    android:layout_width="85dp"
                    android:layout_height="50dp"
                    ></Button>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout

        android:id="@+id/myGamePlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:padding="10dp">

        <GridView
            android:id="@+id/gdvGamePlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_goctron5"
            android:numColumns="4">

        </GridView>

    </RelativeLayout>

</LinearLayout>